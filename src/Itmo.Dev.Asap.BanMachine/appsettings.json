{
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.Extensions.Http": "Information",
        "Grpc.AspNetCore.Server": "Information",
        "Grpc.Net.Client": "Information",
        "System.Net.Http.HttpClient": "Information",
        "Npgsql.Command": "Warning",
        "Npgsql.Connection": "Warning",
        "Npgsql.Transaction": "Warning",
        "Itmo.Dev.Platform.Postgres.Connection.DataSourceConnectionFactory": "Debug",
        "Hangfire": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:T} [{Level:u3}] {SourceContext} {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Serilogs/asap-ban-machine/AppLogs_.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:o} [{Level:u3}] {SourceContext} {Message}{NewLine}{Exception}",
          "retainedFileCountLimit": 30
        }
      }
    ]
  },
  "Platform": {
    "Environment": "",
    "YandexCloud": {
      "ServiceUri": "",
      "LockBox": {
        "SecretId": "",
        "LockboxOptionsPollingDelaySeconds": 60
      }
    }
  },
  "Sentry": {
    "Enabled": true,
    "Environment": "",
    "Dsn": "",
    "Debug": false,
    "TracesSampleRate": 1.0,
    "MinimumEventLevel": "Warning"
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "gRPC": {
        "Url": "http://*:8070",
        "Protocols": "Http2"
      }
    }
  },
  "Application": {
    "Analysis": {
      "BackgroundTask": {
        "PageSize": 100
      }
    },
    "AnalysisResults": {
      "PageSize": 100
    }
  },
  "Infrastructure": {
    "Persistence": {
      "Postgres": {
        "Host": "",
        "Port": -1,
        "Database": "",
        "Username": "",
        "Password": "",
        "SslMode": "Prefer",
        "Pooling": true
      }
    },
    "BackgroundTasks": {
      "Persistence": {
        "SchemaName": "background_tasks"
      },
      "Scheduling": {
        "BatchSize": 10,
        "PollingDelay": "00:00:05",
        "SchedulerRetryCount": 10
      },
      "Execution": {
        "MaxRetryCount": 5
      }
    },
    "ML": {
      "PyPiToken": ""
    }
  },
  "Presentation": {
    "Kafka": {
      "Host": "",
      "Producers": {
        "BanMachineAnalysis": {
          "Topic": "asap_ban_machine_analysis"
        }
      }
    }
  }
}
